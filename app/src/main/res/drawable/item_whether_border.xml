<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- 设置背景颜色为深蓝色 -->
    <solid android:color="#1E90FF" />

    <!-- 设置边框宽度为1dp，颜色为白色 -->
    <stroke
        android:width="1dp"
        android:color="@android:color/white" />

    <!-- 设置圆角半径为8dp -->
    <corners android:radius="8dp" />

    <!-- 设置内边距为8dp -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />

    <!-- 设置大小为宽度为100dp，高度为50dp的圆框矩形 -->
    <size
        android:width="100dp"
        android:height="50dp" />

</shape>